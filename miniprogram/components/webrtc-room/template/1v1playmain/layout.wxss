.t1v1playmain.videoview {
  position: relative;
  width: 100%;
  height: 100%;
  background-repeat:no-repeat;
  background-size: cover;
}

.t1v1playmain .pusher-box { 
	display: inline-block;
	position: absolute; 
	overflow: hidden;
	text-align: center;
}

.t1v1playmain live-pusher {
  width: 100%;
	height: 100%; 
}

.t1v1playmain .player-box { 
	display: inline-block;
	position: relative;
	width: 100%;
	height: 100%; 
	overflow: hidden; 
	text-align: center;
  vertical-align: top;
}

.t1v1playmain .poster {
	position: absolute;
  top: 0;
  left: 0;
  width: 100%;
	height: 100%;
	background-color: #000;
}

.t1v1playmain .set {
  position: absolute;
  width: 100%;
	height: 100%; 
}

.t1v1playmain live-player {
  width: 100%;
	height: 100%; 
}

.t1v1playmain .loading {
  position: absolute;
  width: 100%;  
  height: 100%; 
}

.t1v1playmain .loading cover-image {
  position: absolute;
  top: calc(50% - 15px);
  left: calc(50% - 15px);
  width: 30px;
  height: 30px;
}

